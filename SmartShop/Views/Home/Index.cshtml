

@model IEnumerable<E_Corp.Product>

@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Browse</h2>



<table class="table">
    <tr>
        @*<th>
                @Html.DisplayNameFor(model => model.SellerID)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
       
       
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @*<td>
                    @Html.DisplayFor(modelItem => item.SellerID)
                </td>*@
            <td>
                @Html.ActionLink(item.ProductName, "Details", "Products", new { id = item.ProductID },null)
            </td>
            
           
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            

            <td>
                @Html.ActionLink("Buy", "Buy", new { id = item.ProductID }) 
            </td>

             


        </tr>
    }

</table>

